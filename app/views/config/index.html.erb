<div class="page-header">
  <h1>Configuration</h1>
</div>

<h2>Negative tests</h2>

<table class="table table-striped table-condensed table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Test Name</th>
      <th>Active</th>
      <th>Result Must Be</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @negative_tests.each do |test| %>
      <tr>
        <td><%= test.id %></td>
        <td><%= test.test_name %></td>
        <td class="<%= test.active ? 'success':'danger' %>"><%= test.active ? 'yes':'no' %></td>
        <td><%= test.result_must_be %></td>
        <td>
          <%= activate_button(test) %>
          <%= destroy_button %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
