<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Bot List</h3>
  </div>
  <div class="panel-body">
  </div>
  <div class="panel-footer text-right">
    <%= link_to icon('list') + ' Bot list', updatelacnicfile_path, :class => 'btn btn-success'%>
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">LACNIC file</h3>
  </div>
  <div class="panel-body">
    <p><strong>Last file update: </strong><%= @lacnic_time.strftime("%F %T") %> (<%= time_ago_in_words(@lacnic_time)%> ago.)</p>
    <p><strong>File size:</strong> <%= Filesize.from("#{@lacnic_size.to_s} B").pretty %></p>
  </div>
  <div class="panel-footer text-right">
    <%= link_to icon('download') + ' Update file', updatelacnicfile_path, :class => 'btn btn-success'%>
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Firewall Logs</h3>
  </div>
  <div class="panel-body">
    <p><strong>Found logs: </strong> <%= @logs_count %></p>
    <p><strong>Last log file: </strong><%= @last_log %></p>
  </div>
  <div class="panel-footer text-right">
    <%= link_to icon('magic') + ' Process last file', updatelacnicfile_path, :class => 'btn btn-primary'%>&nbsp;
    <%= link_to icon('list') + ' View logs', updatelacnicfile_path, :class => 'btn btn-success'%>
  </div>
</div>

